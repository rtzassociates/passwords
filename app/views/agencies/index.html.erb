<div class="row">
  <div class="span8 subheading">
    <div class="pull-left">
    <h3>Agency List</h3>
    <p class="muted">A list of agencies, email addresses and passwords.</p>
    </div>
  </div>
  <div class="span4 subheading">
    <div class="pull-right">
    <%= form_tag password_list_path(@password_list), :method => 'get', :class => "form-search", :id => "agency-search" do %>
      <div class="input-append">
        <%= text_field_tag :search, params[:search], :class => "input-medium search-query", :placeholder => "Agency Name" %>
        <%= button_tag "Search", :name => nil, :class => "btn" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

<div class="agencies">
  <table id="agencies" class="table table-striped">
    <tr>
      <th>Agency Name</th>
      <th>Recipients</th>
      <th>Password</th>
      <th></th>
    </tr>
  <% @agencies.each do |agency| %>
    <tr>
      <td><%= agency.name %></td>
      <td><%= agency.recipients %></td>
      <td><%= agency.password %></td>
      <td><%= link_to "Edit", edit_password_list_agency_path(@password_list, agency), :class => "action" %>
          <%= link_to "Delete", agency, :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "action danger" %></td>
    </tr>
  <% end %>
  </table>
</div>
